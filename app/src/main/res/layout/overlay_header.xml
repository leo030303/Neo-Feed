<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/rl_margin_less"
    android:paddingEnd="@dimen/rl_margin_less"
    android:paddingTop="4dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal" >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/textColorPrimary"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:id="@+id/header_title"
        android:layout_weight="1"
        android:textStyle="bold"
        tools:targetApi="p" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_bookmarks"
        android:id="@+id/main_page_bookmark_button" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:id="@+id/header_preferences"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_more_vertical_24"
        android:tint="@color/textColorPrimary" />
</LinearLayout>